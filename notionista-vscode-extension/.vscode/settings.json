{
  // General: file handling & associations
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "*.agent.md": "markdown",
    "*.instructions.md": "markdown",
    "*.prompt.md": "markdown",
    "*.skills.md": "markdown",
    "*.mdx": "markdown"
  },

  // Chat: instructions & behavior
  "chat.instructionsFilesLocations": {
    "workspace": true,
    "global": true
  },

  // Editor: core editor settings & formatting
  "editor.wordWrap": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Language-specific editor defaults
  "[markdown]": {
    "files.trimTrailingWhitespace": false,
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },

  // ESLint and validation
  "eslint.useFlatConfig": true,
  "eslint.format.enable": true,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "jsonc"
  ],

  // TypeScript language server & preferences
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,

  // Vitest
  "vitest.commandLine": "pnpm vitest",

  // Tailwind CSS settings
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "html",
    "typescriptreact": "html",
    "javascript": "html",
    "javascriptreact": "html"
  },

  // Chat-related features & agents
  "chat.agent.thinkingStyle": "collapsedPreview",
  "chat.agentSessionsViewLocation": "single-view",
  "chat.allowAnonymousAccess": true,
  "chat.checkpoints.showFileChanges": true,
  "chat.editor.wordWrap": "on",
  "chat.edits2.enabled": true,
  "chat.mcp.assisted.nuget.enabled": true,
  "chat.mcp.autostart": "onlyNew",
  "chat.mcp.discovery.enabled": {
    "claude-desktop": true,
    "cursor-global": true,
    "windsurf": true,
    "cursor-workspace": true
  },
  "chat.mcp.gallery.enabled": true,
  "chat.renderRelatedFiles": true,
  "chat.todoListTool.writeOnly": true,
  "chat.tools.terminal.autoReplyToPrompts": true,
  "chat.useNestedAgentsMdFiles": true,
  "chat.customAgentInSubagent.enabled": true,

  // Inline chat & notebook helpers
  "inlineChat.enableV2": true,
  "inlineChat.finishOnType": true,
  "inlineChat.notebookAgent": true,

  // GitHub Copilot chat features
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.alternateGptPrompt.enabled": true,
  "github.copilot.chat.completionsFetcher": "node-fetch",
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.chat.languageContext.fix.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.includeDocumentation": true,
  "github.copilot.chat.newWorkspace.useContext7": true,
  "github.copilot.chat.notebook.enhancedNextEditSuggestions.enabled": true,
  "github.copilot.chat.notebook.followCellExecution.enabled": true,
  "github.copilot.chat.anthropic.tools.websearch.enabled": true,
  "github.copilot.chat.githubMcpServer.enabled": true,
  "github.copilot.chat.nesFetcher": "node-fetch",
  "github.copilot.chat.tools.memory.enabled": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.cli.customAgents.enabled": true,

  // Extensions, icons & PRs
  "material-icon-theme.folders.associations": {
    "copilot": "prompts"
  },
  "githubPullRequests.experimental.useQuickChat": true,
  "extensions.closeExtensionDetailsOnViewChange": true,

  // Package managers & scripts
  "npm.enableRunFromFolder": true,
  "npm.scriptRunner": "pnpm",

  // Prisma
  "prisma.pinToPrisma6": false,
  "prisma.hidePrisma6Prompts": true,
  "prisma.scriptRunner": "pnpm",
  "chat.useAgentSkills": true
}
